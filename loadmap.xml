<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content">
	<name>Content - Load map</name>
	<author>Noxidsoft</author>
	<creationDate>February 2012</creationDate>
	<copyright>Copyright (C) 2007 - 2012 Noxidsoft. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenseses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@noxidsoft.com</authorEmail>
	<authorUrl>www.noxidsoft.com</authorUrl>
	<version>1.0.2</version>
	<description>PLG_LOADMAP_XML_DESCRIPTION</description>
	<files>
		<filename plugin="loadmap">loadmap.php</filename>
		<filename>index.html</filename>
		<folder>images</folder>
		<folder>language</folder>
	</files>
	
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field 
					name="mapMode" 
					type="list"
					default="0"
					label="PLG_MAPMODE_LABEL"
					description="PLG_MAPMODE_DESC">
					<option value="0">PLG_MAPMODE_ONE</option>
					<option value="1">PLG_MAPMODE_TWO</option>
					<option value="2">PLG_MAPMODE_THREE</option>
				</field>
				<field 
					name="mapState" 
					type="text" 
					default="" 
					label="PLG_MAPSTATE_LABEL" 
					description="PLG_MAPSTATE_DESC" 
					size="10" />
				<field 
					name="mapCountry" 
					type="text" 
					default="" 
					label="PLG_MAPCOUNTRY_LABEL" 
					description="PLG_MAPCOUNRTY_DESC" 
				size="10" />
			</fieldset>

		</fields>
	</config>
</extension>
